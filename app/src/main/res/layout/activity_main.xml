<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#1C1E1F"
    android:backgroundTint="#1C1E1F"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/texto"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="96dp"
        android:ems="10"
        android:fontFamily="@font/alegreya_sans_italic"
        android:hint=" Escriba aquí la palabra a traducir"
        android:inputType="text"
        android:textAlignment="center"
        android:textColor="#E0D2D2"
        android:textColorHint="#187985"
        android:textSize="28sp"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="52sp"
        android:layout_marginTop="160dp"
        android:fontFamily="@font/alegreya_sc"
        android:text="Traductor Español/Inglés"
        android:textAlignment="center"
        android:textColor="#187985"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btTraducir"
        android:layout_width="match_parent"
        android:layout_height="71dp"
        android:layout_marginTop="96dp"
        android:backgroundTint="#187985"
        android:fontFamily="@font/alegreya_sc"
        android:text="Traducir"
        android:textAlignment="center"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/texto" />

</androidx.constraintlayout.widget.ConstraintLayout>