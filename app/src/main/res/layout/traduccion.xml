<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ingles"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="52sp"
        android:layout_marginTop="108dp"
        android:fontFamily="@font/alegreya_sc"
        android:text="Traducción a inglés"
        android:textAlignment="center"
        android:textColor="#197C89"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img"
        android:layout_width="324dp"
        android:layout_height="266dp"
        android:layout_marginTop="92dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_ingles"
        tools:srcCompat="@tools:sample/avatars" />

    <EditText
        android:id="@+id/et_ingles"
        android:layout_width="match_parent"
        android:layout_height="52sp"
        android:layout_marginTop="88dp"
        android:ems="10"
        android:fontFamily="@font/alegreya_sans_italic"
        android:inputType="text"
        android:textAlignment="center"
        android:textColor="#E6D3D3"
        android:textSize="28sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

</androidx.constraintlayout.widget.ConstraintLayout>